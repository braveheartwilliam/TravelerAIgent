		"lucide-svelte": "^0.511.0",
		"oslo": "^1.2.1",
		"pg": "^8.16.0",
		"postgres": "^3.4.5",
		"shadcn-svelte": "^0.14.2",
		"svelte-lucide": "^2.0.1",
		"svelte-portal": "^2.2.1",
		"svelte-sonner": "^1.0.1"
	}
}
