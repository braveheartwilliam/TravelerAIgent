{
	"name": "travelaigent-svelte",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 65480",
		"devKill": "lsof -ti:65480 | xargs kill -9 && vite dev --port 65480",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --threshold warning",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check:light": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --threshold warning --fail-on-warnings=false",
		"check:routes": "./scripts/check-svelte.sh src/routes",
		"check:components": "./scripts/check-svelte.sh src/lib/components",
		"check:lib": "./scripts/check-svelte.sh src/lib",
		"check:current": "node -e \"const path=process.argv[1]; require('child_process').execSync('./scripts/check-svelte.sh ' + path, {stdio: 'inherit'})\"",
		"lint:svelte": "./scripts/lint-svelte.js",
		"lint:file": "./scripts/lint-svelte.js",
		"fast-lint": "./scripts/fast-lint.js",
		"fast-lint:file": "./scripts/fast-lint.js",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit migrate",
		"db:migrate:run": "tsx scripts/run-migration.ts",
		"db:studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@playwright/test": "^1.52.0",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/kit": "^2.21.1",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/postcss": "^4.1.7",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.7",
		"@tanstack/svelte-query": "^5.67.3",
		"@tanstack/svelte-query-devtools": "^5.76.0",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"@testing-library/user-event": "^14.6.1",
		"@tsconfig/svelte": "^5.0.4",
		"@types/date-fns": "^2.5.3",
		"@types/node": "^22.15.19",
		"@types/pg": "^8.15.2",
		"@types/uuid": "^10.0.0",
		"autoprefixer": "^10.4.21",
		"bits-ui": "^0.22.0",
		"clsx": "^2.1.1",
		"dotenv": "^16.5.0",
		"dotenv-cli": "^8.0.0",
		"drizzle-kit": "^0.30.2",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"formsnap": "^1.0.1",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"postcss": "^8.5.3",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.31.1",
		"svelte-check": "^4.2.1",
		"sveltekit-superforms": "^2.25.0",
		"tailwind-merge": "^3.3.0",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.1.7",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.20.0",
		"uuid": "^11.0.5",
		"vite": "^6.2.2",
		"vitest": "^3.0.9",
		"zod": "^3.25.7"
	},
	"dependencies": {
		"@auth/core": "^0.39.1",
		"@auth/sveltekit": "^1.9.2",
		"@mdi/js": "^7.4.47",
		"@mdi/svg": "^7.4.47",
		"@melt-ui/svelte": "^0.86.6",
